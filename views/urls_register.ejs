<!-- views/urls_register.ejs -->

<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" type="text/css" href="style.css" >
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<head>
  <title>TinyApp - Register</title>
</head>
<body>
  <% include partials/_header %>
  <div class="container">
    <h1>Register your account</h1>
    <ul>
      <form action="/urls/register" method="POST">
        <label for="email">Email:</label>
        <input id="email" type="email" name="email" placeholder="youremail@tinyApp.com"><br></br>
        <input id="password" type="password" name="password" placeholder="********"><br></br>
        <input type="submit" value="Submit">
      </form>
      <a href="/urls/new">Make new TinyApp</a>
    </ul>
  </div>

</body>
</html>
